{
  "name": "movies-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo containing Next.js frontend and Strapi backend for movies application",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend develop",
    "build": "pnpm build:frontend && pnpm build:backend",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "start": "concurrently \"pnpm start:frontend\" \"pnpm start:backend\"",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend start"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
